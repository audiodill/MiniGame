@using Project.Web.Models;
@model List<ItemModel>
@{
    ViewBag.Title = "PlayerInventory";
    Layout = "~/Views/Shared/Store_Layout .cshtml";
}

<h2>Player Inventory</h2>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="media">
        <div class="media-left">
            <img src="@Url.Content("~/Content/img/" + Model[i].ImageName)" class="pull-left" />
        </div>
        <div class="media-body">
            <h3 class="media-heading">@Model[i].Name</h3>
            <p><img src="~/Content/img/Misc/Gold.jpg" class="gold" />@Model[i].Price Gold</p>
        </div>
    </div>
}
